---
import AnnouncementBar from "./AnnouncementBar.astro";
---

<header class="bg-[#224433] shadow">
  <AnnouncementBar />
  <div class="bg-white max-w-7xl mx-auto flex items-center justify-between px-6 py-3">
    

    <!-- Logo -->
     <div class="flex items-center gap-2">
      <!-- bg-[#B3F111]/70 -->
    <a href="#" class="flex items-center p-2 rounded-2xl">
      <img src="/public/orossm.png" alt="Logo Intellecta" class="h-8 w-auto">
      
    </a>
    <h1 class="font-bold text-[#224433] text-xl uppercase">óros</h1></div>

    <!-- Nav -->
    <nav class="flex space-x-8">
      <a href="#" class="relative text-[#224433] font-medium transition-colors duration-200">
        Inicio
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-[#B3F111] transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="group relative text-[#224433] font-medium transition-colors duration-200">
        Servicios
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-[#B3F111] transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="group relative text-[#224433] font-medium transition-colors duration-200">
        Clientes
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-[#B3F111] transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="group relative text-[#224433] font-medium transition-colors duration-200">
        Campus
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-[#B3F111] transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="group relative text-[#224433] font-medium transition-colors duration-200">
        Nosotros
        <span class="absolute left-0 -bottom-1 w-0 h-[2px] bg-[#B3F111] transition-all duration-300 group-hover:w-full"></span>
      </a>
    </nav>
    <a href="#" class="group relative hover:text-white bg-[#224433] px-4 py-2 rounded-full font-medium transition-colors duration-200 text-[#B3F111]">
        Solicitar información
      </a>
  </div>
</header>

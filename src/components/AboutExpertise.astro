---
import Metrics from './ui/Metrics.astro';
import ProgressBar from './ui/ProgressBar.astro';

/**
 * AboutExpertise.astro
 * - Sección "About / Expertise" con imágenes, badge, barras de progreso, CTA y KPIs
 * - Tailwind-ready (usa #224433 y #B3F111 como en tu paleta)
 */
interface Skill {
  name: string;
  percent: number; // 0-100
}

interface Metric {
  label: string;
  value: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  skills?: Skill[];
  metrics?: Metric[];
  imgTop?: string;
  imgBottom?: string;
}

const {
  // eyebrow = "About Us",
  eyebrow = "Sobre Nosotros",
  // title = "Empowering Your Success with Digital Expertise",
  title = "Hacemos Realidad Tu Éxito Con Innovación Digital",
  imgTop = "https://images.unsplash.com/photo-1551836022-d5d88e9218df?q=80&w=1200&auto=format&fit=crop",
  imgBottom = "https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=1200&auto=format&fit=crop",
} = Astro.props as Props;
---

<section class="relative mx-auto max-w-7xl px-4 py-12 md:py-16">
  <!-- Fondo y acento lateral -->
  <!-- <div class="absolute inset-0 -z-10 rounded-3xl border border-black/5 bg-white shadow-sm"></div>
  <div class="pointer-events-none absolute inset-y-0 right-0 w-1/6 [clip-path:polygon(30%_0,100%_0,100%_100%,0_100%)] bg-[#B3F111]/20 -z-10 rounded-e-3xl"></div> -->

  <!-- Header -->
   <div class="py-2 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 text-xs md:text-3xl font-medium text-[#224433]">
        <span class="inline-block h-4 w-4 rounded-full bg-[#B3F111]"></span>
        {eyebrow}
      </div>
      <h2 class="mt-3 mx-auto w-4/5 text-3xl font-bold tracking-tight text-[#224433] md:text-6xl">
        {title}
      </h2>
  </div>

  

  <!-- Grid imágenes + skill -->
  <div class="grid items-stretch my-8 gap-4 md:grid-cols-[1.3fr_1fr]">
    <div class="grid grid-rows-2 gap-4">
      <img
        src={imgTop}
        alt="Team working"
        class="h-48 w-3/4 rounded-2xl object-cover grayscale [filter:grayscale(1)] md:h-56"
        loading="lazy"
      />
      <img
        src={imgBottom}
        alt="Strategy session"
        class="h-48 w-full rounded-2xl object-cover grayscale [filter:grayscale(1)] md:h-56"
        loading="lazy"
      />
    </div>

    <ProgressBar />
  </div>
  <div class="mb-10 gap-6 md:items-center w-full">
    

    <Metrics />
  </div>
</section>
